{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@proto/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@proto/environment": ["libs/environment/src/index.ts"],
      "@proto/features-data": ["libs/features-data/src/index.ts"],
      "@proto/features-state": ["libs/features-state/src/index.ts"],
      "@proto/guards/remote-auth": ["libs/guards/remote-auth/src/index.ts"],
      "@proto/material": ["libs/material/src/index.ts"],
      "@proto/testing": ["libs/testing/src/index.ts"],
      "@proto/ui-login": ["libs/ui-login/src/index.ts"],
      "@proto/users-data": ["libs/users-data/src/index.ts"],
      "@proto/users-state": ["libs/users-state/src/index.ts"],
      "@proto/ingress-data": ["libs/ingress-data/src/index.ts"],
      "@proto/ingress-state": ["libs/ingress-state/src/index.ts"],
      "@proto/transformation-data": ["libs/transformation-data/src/index.ts"],
      "@proto/transformation-state": ["libs/transformation-state/src/index.ts"],
      "@proto/reporting-data": ["libs/reporting-data/src/index.ts"],
      "@proto/reporting-state": ["libs/reporting-state/src/index.ts"],
      "@proto/export-data": ["libs/export-data/src/index.ts"],
      "@proto/export-state": ["libs/export-state/src/index.ts"],
      "users/Routes": ["apps/users/src/app/remote-entry/entry.routes.ts"],
      "ingress/Routes": ["apps/ingress/src/app/remote-entry/entry.routes.ts"],
      "transformation/Routes": [
        "apps/transformation/src/app/remote-entry/entry.routes.ts"
      ],
      "reporting/Routes": [
        "apps/reporting/src/app/remote-entry/entry.routes.ts"
      ],
      "export/Routes": ["apps/export/src/app/remote-entry/entry.routes.ts"],
      "@proto/ui-theme": ["libs/ui-theme/src/index.ts"],
      "@proto/health-data": ["libs/health-data/src/index.ts"],
      "@proto/health-state": ["libs/health-state/src/index.ts"],
      "@proto/auth-state": ["libs/auth-state/src/index.ts"],
      "@proto/auth-guard": ["libs/auth-guard/src/index.ts"],
      "@proto/ui-charts": ["libs/ui-charts/src/index.ts"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": ["node_modules", "tmp"]
}
